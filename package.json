    "eslint-config-next": "14.1.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-storybook": "^9.1.2",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "playwright": "^1.54.2",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "storybook": "^9.1.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
